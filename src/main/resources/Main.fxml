               text="10">
        <font>
            <Font name="Monospaced Regular" size="41.0"/>
        </font>
    </TextField>
    <Text layoutX="1464.0" layoutY="301.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Офсет:">
        <font>
            <Font name="Monospaced Regular" size="50.0"/>
